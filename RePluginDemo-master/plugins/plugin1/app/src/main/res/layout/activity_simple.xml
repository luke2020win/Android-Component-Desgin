<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffff0000"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/id_btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:text="以下是扩展跳转:"
        android:gravity="center"
        android:background="#55ff0000"/>

    <Button
        android:id="@+id/id_btn_base_start_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="启动standard模式Activity"
        />

    <Button
        android:id="@+id/id_btn_base_start_single_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="启动SingleTask模式Activity"
        />

    <Button
        android:id="@+id/id_btn_base_start_single_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="启动SingleTop模式Activity"
        />

    <Button
        android:id="@+id/id_btn_base_start_single_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="启动SingleInstacne模式Activity"
        />



</LinearLayout>